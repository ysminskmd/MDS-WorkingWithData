<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showBooksBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show books" />

    <Button
        android:id="@+id/showStudentsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show students" />

    <Button
        android:id="@+id/modifyBooksBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify books" />

    <Button
        android:id="@+id/modifyStudentsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify students" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>